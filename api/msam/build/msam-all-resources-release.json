{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "This template creates all the resources needed by MSAM.",
    "Resources": {
        "DynamoDBModuleStack": {
            "Type": "AWS::CloudFormation::Stack",
            "Properties": {
                "TemplateURL": {
                    "Fn::Join": [
                        "",
                        [
                            {
                                "Fn::Join": [
                                    "",
                                    [
                                        "https://",
                                        {
                                            "Ref": "BucketBasename"
                                        },
                                        "-",
                                        {
                                            "Ref": "AWS::Region"
                                        }
                                    ]
                                ]
                            },
                            ".s3.amazonaws.com/msam/msam-dynamodb-release-DEV_0_0_0.template"
                        ]
                    ]
                },
                "Parameters": {
                    "BucketBasename": {
                        "Ref": "BucketBasename"
                    }
                }
            }
        },
        "CoreModuleStack": {
            "Type": "AWS::CloudFormation::Stack",
            "Properties": {
                "TemplateURL": {
                    "Fn::Join": [
                        "",
                        [
                            {
                                "Fn::Join": [
                                    "",
                                    [
                                        "https://",
                                        {
                                            "Ref": "BucketBasename"
                                        },
                                        "-",
                                        {
                                            "Ref": "AWS::Region"
                                        }
                                    ]
                                ]
                            },
                            ".s3.amazonaws.com/msam/msam-core-release-DEV_0_0_0.template"
                        ]
                    ]
                },
                "Parameters": {
                    "AlarmsTableName": {
                        "Fn::GetAtt": [
                            "DynamoDBModuleStack",
                            "Outputs.AlarmsTable"
                        ]
                    },
                    "ChannelsTableName": {
                        "Fn::GetAtt": [
                            "DynamoDBModuleStack",
                            "Outputs.ChannelsTable"
                        ]
                    },
                    "ContentTableName": {
                        "Fn::GetAtt": [
                            "DynamoDBModuleStack",
                            "Outputs.ContentTable"
                        ]
                    },
                    "EventsTableName": {
                        "Fn::GetAtt": [
                            "DynamoDBModuleStack",
                            "Outputs.EventsTable"
                        ]
                    },
                    "LayoutTableName": {
                        "Fn::GetAtt": [
                            "DynamoDBModuleStack",
                            "Outputs.LayoutTable"
                        ]
                    },
                    "SettingsTableName": {
                        "Fn::GetAtt": [
                            "DynamoDBModuleStack",
                            "Outputs.SettingsTable"
                        ]
                    },
                    "CloudWatchEventsTableName": {
                        "Fn::GetAtt": [
                            "DynamoDBModuleStack",
                            "Outputs.CloudWatchEventsTable"
                        ]
                    },
                    "BucketBasename": {
                        "Ref": "BucketBasename"
                    }
                }
            }
        },
        "EventsModuleStack": {
            "Type": "AWS::CloudFormation::Stack",
            "Properties": {
                "TemplateURL": {
                    "Fn::Join": [
                        "",
                        [
                            {
                                "Fn::Join": [
                                    "",
                                    [
                                        "https://",
                                        {
                                            "Ref": "BucketBasename"
                                        },
                                        "-",
                                        {
                                            "Ref": "AWS::Region"
                                        }
                                    ]
                                ]
                            },
                            ".s3.amazonaws.com/msam/msam-events-release-DEV_0_0_0.template"
                        ]
                    ]
                },
                "Parameters": {
                    "EventsTableName": {
                        "Fn::GetAtt": [
                            "DynamoDBModuleStack",
                            "Outputs.ContentTable"
                        ]
                    },
                    "CloudWatchEventsTableName": {
                        "Fn::GetAtt": [
                            "DynamoDBModuleStack",
                            "Outputs.CloudWatchEventsTable"
                        ]
                    },
                    "ItemTTL": {
                        "Ref": "CacheItemTTL"
                    },
                    "EventsTableRegion": {
                        "Ref": "AWS::Region"
                    },
                    "BucketBasename": {
                        "Ref": "BucketBasename"
                    }
                }
            }
        },
        "BrowserAppModuleStack": {
            "Type": "AWS::CloudFormation::Stack",
            "Properties": {
                "TemplateURL": {
                    "Fn::Join": [
                        "",
                        [
                            {
                                "Fn::Join": [
                                    "",
                                    [
                                        "https://",
                                        {
                                            "Ref": "BucketBasename"
                                        },
                                        "-",
                                        {
                                            "Ref": "AWS::Region"
                                        }
                                    ]
                                ]
                            },
                            ".s3.amazonaws.com/msam/msam-browser-app-release-DEV_0_0_0.template"
                        ]
                    ]
                },
                "Parameters": {
                    "BucketBasename": {
                        "Ref": "BucketBasename"
                    }
                }
            }
        }
    },
    "Parameters": {
        "CacheItemTTL": {
            "Default": "86400",
            "Description": "This is the maximum time in seconds a cached item will remain if never updated (3600 = 1 hour, 86400 = 1 day, 604800 = 1 week).",
            "Type": "String",
            "AllowedPattern": "\\S+",
            "MinLength": 1,
            "ConstraintDescription": "Please enter a value for this field."
        },
        "BucketBasename": {
            "Default": "rodeolabz",
            "Description": "This is basename of the bucket that holds the MSAM code base.",
            "Type": "String",
            "AllowedPattern": "\\S+",
            "MinLength": 1,
            "ConstraintDescription": "Please enter a value for this field."
        }
    },
    "Outputs": {
        "MSAMBrowserURL": {
            "Value": {
                "Fn::GetAtt": [
                    "BrowserAppModuleStack",
                    "Outputs.MSAMBrowserURL"
                ]
            },
            "Description": "URL for the MSAM browser application"
        },
        "EndpointURL": {
            "Value": {
                "Fn::GetAtt": [
                    "CoreModuleStack",
                    "Outputs.EndpointURL"
                ]
            },
            "Description": "The endpoint needed by the MSAM browser application"
        },
        "APIKeyID": {
            "Value": {
                "Fn::GetAtt": [
                    "CoreModuleStack",
                    "Outputs.APIKeyID"
                ]
            },
            "Description": "Link for retrieving API key needed by the MSAM browser application"
        }
    }
}