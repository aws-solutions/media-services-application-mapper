{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Media Services Application Mapper (MSAM) browser application (ID: DEV_0_0_0)",
    "Resources": {
        "MSAMAppBucketOriginAccessIdentity": {
            "Type": "AWS::CloudFront::CloudFrontOriginAccessIdentity",
            "Properties": {
                "CloudFrontOriginAccessIdentityConfig": {
                    "Comment": {
                        "Fn::Join": [
                            "", [
                                "Origin Access Identity for ",
                                {
                                    "Ref": "MSAMBrowserAppBucket"
                                }
                            ]
                        ]
                    }
                }
            }
        },
        "MSAMAppBucketCloudFrontDistribution": {
            "Type": "AWS::CloudFront::Distribution",
            "Properties": {
                "DistributionConfig": {
                    "Comment": {
                        "Fn::Join": [
                            "", [
                                "CDN for ",
                                {
                                    "Ref": "MSAMBrowserAppBucket"
                                }
                            ]
                        ]
                    },
                    "Enabled": true,
                    "PriceClass": "PriceClass_All",
                    "DefaultCacheBehavior": {
                        "TargetOriginId": {
                            "Ref": "MSAMBrowserAppBucket"
                        },
                        "ViewerProtocolPolicy": "https-only",
                        "MinTTL": 0,
                        "AllowedMethods": [
                            "HEAD",
                            "GET"
                        ],
                        "CachedMethods": [
                            "HEAD",
                            "GET"
                        ],
                        "ForwardedValues": {
                            "QueryString": false
                        }
                    },
                    "Origins": [{
                        "DomainName": {
                            "Fn::Join": [
                                "", [{
                                        "Ref": "MSAMBrowserAppBucket"
                                    },
                                    ".s3.amazonaws.com"
                                ]
                            ]
                        },
                        "Id": {
                            "Ref": "MSAMBrowserAppBucket"
                        },
                        "S3OriginConfig": {
                            "OriginAccessIdentity": {
                                "Fn::Join": [
                                    "", ["origin-access-identity/cloudfront/",
                                        {
                                            "Ref": "MSAMAppBucketOriginAccessIdentity"
                                        }
                                    ]
                                ]
                            }
                        }
                    }],
                    "Restrictions": {
                        "GeoRestriction": {
                            "RestrictionType": "none",
                            "Locations": []
                        }
                    },
                    "ViewerCertificate": {
                        "CloudFrontDefaultCertificate": "true",
                        "MinimumProtocolVersion": "TLSv1"
                    }
                }
            }
        },
        "MSAMAppBucketPolicy": {
            "Type": "AWS::S3::BucketPolicy",
            "Properties": {
                "Bucket": {
                    "Ref": "MSAMBrowserAppBucket"
                },
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Id": "PolicyForCloudFrontPrivateContent",
                    "Statement": [{
                        "Effect": "Allow",
                        "Principal": {
                            "CanonicalUser": {
                                "Fn::GetAtt": [
                                    "MSAMAppBucketOriginAccessIdentity",
                                    "S3CanonicalUserId"
                                ]
                            }
                        },
                        "Action": "s3:GetObject",
                        "Resource": {
                            "Fn::Join": [
                                "", [{
                                        "Fn::GetAtt": [
                                            "MSAMBrowserAppBucket",
                                            "Arn"
                                        ]
                                    },
                                    "/*"
                                ]
                            ]
                        }

                    }]
                }
            }
        },
        "MSAMBrowserAppBucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "CorsConfiguration": {
                    "CorsRules": [{
                        "AllowedHeaders": [
                            "*"
                        ],
                        "AllowedMethods": [
                            "GET"
                        ],
                        "AllowedOrigins": [
                            "*"
                        ],
                        "MaxAge": "3000"
                    }]
                }

            }
        },
        "MSAMWebBucketLoaderRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "ManagedPolicyArns": ["arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"],
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [{
                        "Effect": "Allow",
                        "Principal": {
                            "Service": [
                                "lambda.amazonaws.com"
                            ]
                        },
                        "Action": [
                            "sts:AssumeRole"
                        ]
                    }]
                },
                "Policies": [{
                    "PolicyName": "MSAMWebBucketLoaderRolePolicy",
                    "PolicyDocument": {
                        "Version": "2012-10-17",
                        "Statement": [{
                            "Sid": "VisualEditor0",
                            "Effect": "Allow",
                            "Action": [
                                "s3:PutObject",
                                "s3:ListBucket",
                                "s3:DeleteObject",
                                "s3:PutObjectAcl"
                            ],
                            "Resource": "*"
                        }]
                    }
                }]
            }
        },
        "MSAMWebContentResource": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Fn::Join": [
                            "-", [
                                { 
                                    "Ref": "BucketBasename"
                                },
                                {
                                    "Ref": "AWS::Region"
                                }
                            ]
                        ]
                    },
                    "S3Key": "msam/CUSTOM_RESOURCE_FILE"
                },
                "Environment": {
                    "Variables": {
                        "BUILD_STAMP": "DEV_0_0_0",
                        "ZIP_DIGEST": "ZIP_DIGEST_VALUE",
                        "BUCKET_BASENAME": {"Ref": "BucketBasename"}
                    }
                },
                "Handler": "lambda_function.lambda_handler",
                "Description": "MSAM Lambda for custom CloudFormation resource for loading web application",
                "MemorySize": 2560,
                "Role": {
                    "Fn::GetAtt": [
                        "MSAMWebBucketLoaderRole",
                        "Arn"
                    ]
                },
                "Runtime": "python3.6",
                "Timeout": 300
            }
        },
        "MSAMWebContent": {
            "Type": "AWS::CloudFormation::CustomResource",
            "Properties": {
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "MSAMWebContentResource",
                        "Arn"
                    ]
                },
                "BucketName": {
                    "Ref": "MSAMBrowserAppBucket"
                },
                "StackName": {
                    "Ref": "AWS::StackName"
                },
                "BUILD_STAMP": "DEV_0_0_0",
                "ZIP_DIGEST": "ZIP_DIGEST_VALUE"
            }
        }
    },
    "Parameters": {
        "BucketBasename": {
            "Default": "rodeolabz",
            "Description": "This is basename of the bucket that holds the MSAM code base.",
            "Type": "String",
            "AllowedPattern": "\\S+",
            "MinLength": 1,
            "ConstraintDescription": "Please enter a value for this field."
        }
    },
    "Outputs": {
        "MSAMBrowserURL": {
            "Value": {
                "Fn::Join": [
                    "", [
                        "https://",
                        {
                            "Fn::GetAtt": [
                                "MSAMAppBucketCloudFrontDistribution",
                                "DomainName"
                            ]
                        },
                        "/index.html"
                    ]
                ]
            },
            "Description": "URL for the MSAM browser application via CloudFront"
        },
        "MSAMBrowserAppBucket": {
            "Value": {
                "Fn::Join": [
                    "", [
                        "https://s3.console.aws.amazon.com/s3/buckets/",
                        {
                            "Ref": "MSAMBrowserAppBucket"
                        },
                        "/?region=",
                        {
                            "Ref": "AWS::Region"
                        }
                    ]
                ]
            },
            "Description": "MSAM browser application bucket"
        }
    }
}